@model PatientManagementBusiness.Models.PatientRegistrationModel
@{
    ViewBag.Title = "Delete";
}
    <h2>Delete</h2>
    <h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Patient Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.patient.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.patient.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.patient.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.patient.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.patient.Gender)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.patient.Gender)
        </dd>

        <dt>
            @Html.Raw("Active")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.patient.IsActive)
        </dd>

        <dt>
            @Html.Raw("Lab Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.patient.Lab.LabName)
        </dd>

        <dt>
            @Html.DisplayName("Tests Selected")
        </dt>

        <dd>
            @if (Model.selectedTests == null)
            {
                <div>
                    None
                </div>
            }
            @foreach (var item in Model.selectedTests)
            {
                <div>
                    @item.TestName
                    <hr />
                </div>
            }
        </dd>

    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

